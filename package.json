{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/nw-react-scripts && node bin/nw-react-scripts.js build",
    "changelog": "lerna-changelog",
    "create-nw-react-app": "node tasks/cnra.js",
    "publish": "tasks/publish.sh",
    "start": "cd packages/nw-react-scripts && node bin/nw-react-scripts.js start",
    "test": "cd packages/nw-react-scripts && node bin/nw-react-scripts.js test",
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "compile:lockfile": "node tasks/compile-lockfile.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "alex": "^8.2.0",
    "eslint": "^7.11.0",
    "execa": "1.0.0",
    "fs-extra": "^9.0.1",
    "get-port": "^5.1.1",
    "globby": "^11.0.1",
    "husky": "^4.3.0",
    "jest": "26.6.0",
    "lerna": "3.22.1",
    "lerna-changelog": "~0.8.2",
    "lint-staged": "^10.4.2",
    "meow": "^6.1.1",
    "multimatch": "^4.0.0",
    "prettier": "2.1.2",
    "puppeteer": "^3.3.0",
    "strip-ansi": "^6.0.0",
    "svg-term-cli": "^2.1.1",
    "tempy": "^0.2.1",
    "wait-for-localhost": "^3.3.0",
    "web-vitals": "^0.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "prettier --write"
    ]
  }
}
